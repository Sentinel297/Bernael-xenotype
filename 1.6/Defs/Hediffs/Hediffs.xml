	<HediffDef>
		<defName>BX_ReaperEcstasy</defName>
		<label>Reaper's Ecstasy</label>
		<description>A dark psychic phenomenon causes this creature to feed upon the soul of fallen enemies, increasing psychic prowess while slightly refilling their soul saturation.</description>
		<hediffClass>Bernael_Xenotype.Hediff_ReapersEcstasy</hediffClass>
		<initialSeverity>1</initialSeverity>
		<minSeverity>0</minSeverity>
		<maxSeverity>100</maxSeverity>
		<!-- <lethalSeverity>1</lethalSeverity> -->
		<defaultLabelColor>(0.8, 0, 0.7)</defaultLabelColor>
		<makesSickThought>false</makesSickThought>
		<scenarioCanAdd>false</scenarioCanAdd>
		<isBad>false</isBad>
		<everCurableByItem>false</everCurableByItem>
		<keepOnBodyPartRestoration>True</keepOnBodyPartRestoration>
		<stages>
			<li>
				<!-- x = Severity, y = stat factor -->
				<statFactorsBySeverity>
					<li>
						<stat>PsychicSensitivity</stat>
						<valueBySeverity>
							<points>
								<li>(0, 1)</li>
								<li>(1, 1)</li>
								<li>(100, 10)</li>
							</points>
						</valueBySeverity>
					</li>
					<li MayRequire="Ludeon.Rimworld.Royalty">
						<stat>PsychicEntropyGain</stat>
						<valueBySeverity>
							<points>
								<li>(0, 1)</li>
								<li>(1, 1)</li>
								<li>(100, 0.1)</li>
							</points>
						</valueBySeverity>
					</li>
					<li MayRequire="Ludeon.Rimworld.Royalty">
						<stat>PsychicEntropyMax</stat>
						<valueBySeverity>
							<points>
								<li>(0, 1)</li>
								<li>(1, 1)</li>
								<li>(100, 5)</li>
							</points>
						</valueBySeverity>
					</li>
				</statFactorsBySeverity>
			</li>
		</stages>
		<modExtensions>
			<li Class="Bernael_Xenotype.ReaperModExt">
				<killRefillPct>10</killRefillPct>
			</li>
		</modExtensions>
		<comps>
			<!-- <li Class="HediffCompProperties_Disappears"> -->
			<!-- <disappearsAfterTicks>601</disappearsAfterTicks> -->
			<!-- <showRemainingTime>false</showRemainingTime> -->
			<!-- </li> -->
		</comps>
	</HediffDef>

	<HediffDef>
		<defName>BX_WitheredSoulHediff</defName>
		<label>Withered Soul</label>
		<description>person to experience pain if they are in an bad mood</description>
		<hediffClass>Bernael_Xenotype.Hediff_SeverityBasedOnNeed</hediffClass>
		<initialSeverity>1</initialSeverity>
		<minSeverity>0</minSeverity>
		<maxSeverity>1</maxSeverity>
		<!-- <lethalSeverity>1</lethalSeverity> -->
		<makesSickThought>false</makesSickThought>
		<scenarioCanAdd>false</scenarioCanAdd>
		<isBad>false</isBad>
		<everCurableByItem>false</everCurableByItem>
		<keepOnBodyPartRestoration>True</keepOnBodyPartRestoration>
		<stages>
			<li>
				<becomeVisible>false</becomeVisible>
				<painOffset>0.35</painOffset>
				<label>Huge pain</label>
				<minSeverity>0</minSeverity>
			</li>
			<li>
				<becomeVisible>false</becomeVisible>
				<painOffset>0.25</painOffset>
				<label>Serious pain</label>
				<minSeverity>0.3</minSeverity>
			</li>
			<li>
				<becomeVisible>false</becomeVisible>
				<painOffset>0.15</painOffset>
				<label>Aching pain</label>
				<minSeverity>0.6</minSeverity>
			</li>
			<li>
				<becomeVisible>false</becomeVisible>
				<label>Absence of pain</label>
				<minSeverity>0.9</minSeverity>
			</li>
		</stages>
		<modExtensions>
			<li Class="Bernael_Xenotype.ModExt_SeverityBasedOnNeed">
				<severityFromNeed>
					<needDef>Mood</needDef>
					<severity>
						<points>
							<li>(0, 0.1)</li>
							<li>(1, 1)</li>
						</points>
					</severity>
				</severityFromNeed>
			</li>
		</modExtensions>
	</HediffDef>

</Defs>